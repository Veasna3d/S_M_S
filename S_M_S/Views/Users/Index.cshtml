@model S_M_S.Models.User
@{
    ViewBag.Title = "Index";
}

<div class="content-wrapper">
    <div class="content mt-5 pt-3">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h5>List User Info</h5>
                        </div>
                        <div class="m-2">
                            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal" onclick="addNew()">AddNew</button>
                        </div>
                        <div class="card-body">
                            <table id="table_data" class="table table-striped table-bordered"></table>

                            <!-- Modal -->
                            <div id="myModal" class="modal fade" role="dialog">
                                <div class="modal-dialog">
                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title">User Form</h4>
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>

                                        </div>
                                        <div class="modal-body">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Username)
                                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Password)
                                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                                            </div>
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Email)
                                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                            <div class="form-group">
                                                <img src="#" id="mypicture" width="150" height="150" /> <br />
                                                @Html.TextBox("Image", null, new { @class = "btn btn-primary", type = "file", @onchange = "showimg()" }) <br />
                                            </div>

                                        </div>
                                        <div class="modal-footer">
                                            <input type="button" id="btnsave" value="Save" class="btn btn-primary" onclick="saveData()" />
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<script>
    function showimg() {
        var input = document.getElementById("Image");
        var fReader = new FileReader();
        fReader.readAsDataURL(input.files[0]);
        fReader.onloadend = function (event) {
            var img = document.getElementById("mypicture");
            img.src = event.target.result;
        }
    }
</script>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/User_CRUD.js"></script>
}


